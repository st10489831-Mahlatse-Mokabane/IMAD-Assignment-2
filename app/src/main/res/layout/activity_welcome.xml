<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context=".MainWelcome">

    <!-- TextView for a welcome message -->
    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:text="Welcome to the history Quiz!!"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"/>

    <!-- TextView for the description of the app -->
    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:text="Know it or guess it, true or false awaits!"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"/>

    <!-- Button to begin the quiz -->
    <Button
        android:id="@+id/goBtn"
        android:layout_width="263dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:text="Let's go"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/Teagreen"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <!-- Button to stop the quiz -->
    <Button
        android:id="@+id/stopBtn"
        android:layout_width="263dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:text="Stop"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/Teagreen"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
</LinearLayout>